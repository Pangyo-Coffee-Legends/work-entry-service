<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ① 로그를 ./logs 폴더에 남기도록 기본값 설정 -->
    <springProperty name="LOG_PATH" source="logging.file.path" defaultValue="./logs"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <!-- ② JSON 로그 출력용 RollingFileAppender -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 고정된 파일명(app.log) -->
        <file>${LOG_PATH}/app.log</file>

        <!-- 날짜별 롤링 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- logs/app.YYYY-MM-DD.log -->
            <fileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <!-- LogstashEncoder로 JSON 구조화 -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>

        <!-- Feign Client 호출 traceId 전파 -->
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>Asia/Seoul</timeZone>
                </timestamp>
                <mdc/>
                <arguments/>
                <loggerName/>
                <threadName/>
                <message/>
            </providers>
        </encoder>
    </appender>

    <!-- ③ 루트 로거: INFO 이상 로그를 JSON_FILE로 남김 -->
    <root level="INFO">
        <appender-ref ref="JSON_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>